#
# bspwm hotkeys
#

# Quit
super + shift + q
  bspc quit

# C for close, shift+C for KILL!
super + shift + c
  bspc node -c

# alternate between the tiled and monocle layout
# super + t
#   bspc desktop -l next

# Tile, Floating-Tile, Floating, Fullscreen
super + {t,shift + t,s,f}
  bspc node -t {tiled -l NORMAL,pseudo_tiled,floating,fullscreen}

# focus last node or desktop
super + {grave,Tab}
  bspc {node,desktop} -f last

# Swap Last
super + apostrophe
  bspc node -s last

# focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
# super + y
#   bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# Push node to biggest
super + {_,shift + }m
  bspc node -s {biggest,smallest}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# Prev, Next desktop
super + bracket{left,right}
  bspc desktop -f {prev,next}

# Prev, Next monitor
super + ctrl + bracket{left,right}
        bspc monitor -f {prev,next}

# Split Window
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
# super + {Left,Down,Up,Right}
#   bspc node -v {-20 0,0 20,0 -20,20 0}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# Move to, push node to, desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} ^{1-9,10}

# Mouse Focus
~button1
  bspc pointer -g focus

# Left Click Move, Middle Click Resize Side, Right Click Resize Corner
super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

# ??
super + !button{1-3}
  bspc pointer -t %i %i

# ??
super + @button{1-3}
  bspc pointer -u

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

###################

# Launch Terminal
super + Return
  urxvt

# ROFI launcher
super + p
        rofi -show run  

# ROFI SSH 
super + shift + p
        rofi -show ssh

# Reload sxhkd config
super + Escape
  pkill -USR1 -x sxhkd
