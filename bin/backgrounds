#!/bin/bash
#
# a simple background changer for dwm
#
# requires feh 
# 
# idea origonally from https://bbs.archlinux.org/viewtopic.php?id=92444
#

imageBox=(/home/$USER/Dropbox/Backgrounds/*)
timer=300 #5 minutes

while true
do
  image=${imageBox[$RANDOM % ${#imageBox[@]}]}
  echo $image
  feh --bg-scale $image
  sleep $timer
done
